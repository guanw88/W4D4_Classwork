<h2>This is the page for displaying an existing band (Band#show)!</h2>

<p>Profile Page For <%= @band.name %></p>

<p>Albums</p>
<% albums = Album.where(band_id: @band.id);%>
<% if albums.empty? %>
  <%= "This band has no albums." %>
<% else %>
  <% albums.each do |album| %>
    <p><a href="<%= album_url(album) %>"><%= album.title %></a></p>
  <% end %>
<% end %>
<a href="<%= new_band_album_url(@band) %>">Add Album</a>
<a href="<%= edit_band_url %>">Edit Band</a>

<form class="" action="<%= band_url(@band) %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <input type="submit" value="Delete Band">
</form>
